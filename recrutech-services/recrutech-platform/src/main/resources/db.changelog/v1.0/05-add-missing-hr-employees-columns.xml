<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!--
# Add Missing Columns to HR Employees Table
# Version: 1.0.1
# Author: System Migration
# Description: Adds missing columns to the hr_employees table to match the HREmployee entity
# 
# This migration adds columns that were missing from the initial table creation:
# - email: HR employee's email address (required)
# - first_name: HR employee's first name (required)
# - last_name: HR employee's last name (required)
# - email_verified: Whether the email has been verified (default false)
-->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="05-add-missing-hr-employees-columns" author="system-migration">
        <comment>
            Add missing columns to hr_employees table to match the HREmployee entity definition:
            - email: HR employee's email address
            - first_name: HR employee's first name
            - last_name: HR employee's last name
            - email_verified: Email verification status
        </comment>

        <!-- Add email column -->
        <addColumn tableName="hr_employees">
            <column name="email" type="VARCHAR(254)" afterColumn="account_id">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Add first_name column -->
        <addColumn tableName="hr_employees">
            <column name="first_name" type="VARCHAR(100)" afterColumn="email">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Add last_name column -->
        <addColumn tableName="hr_employees">
            <column name="last_name" type="VARCHAR(100)" afterColumn="first_name">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Add email_verified column -->
        <addColumn tableName="hr_employees">
            <column name="email_verified" type="BOOLEAN" defaultValueBoolean="false" afterColumn="active">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="hr_employees" columnName="email_verified"/>
            <dropColumn tableName="hr_employees" columnName="last_name"/>
            <dropColumn tableName="hr_employees" columnName="first_name"/>
            <dropColumn tableName="hr_employees" columnName="email"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
